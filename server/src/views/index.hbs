<div class="container-fluid">
    <div class="alert alert-danger alert-dismissible collapse fade" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <!-- Dashboard -->
    <header class="dashboard row">
        <section class="dashboard__controls col-sm-12 col-lg-4">
            <button id="toggle-game-btn" type="button" class="btn btn-outline-primary">Play</button>
            <button id="replay-btn" type="button" class="btn btn-outline-secondary">Replay</button>
            <a id="scores-btn" class="btn btn-outline-secondary" href="#scores-table" role="button">Scores</a>
            <a id="scores-btn" class="btn btn-outline-danger" href="/session/logout" role="button">Logout</a>
        </section>
        <section class="statistic col-3 col-lg-2">
            <div class="statistic__title">Points:</div>
            <div id="score" class="statistic__content"></div>
        </section>
        <section class="statistic col-3 col-lg-2">
            <div class="statistic__title">Timer:</div>
            <div id="timer" class="statistic__content"></div>
        </section>
        <section class="statistic col-3 col-lg-2">
            <div class="statistic__title">Name:</div>
            <div class="statistic__content">{{{name}}}</div>
        </section>
        <section class="statistic col-3 col-lg-2">
            <div class="statistic__title">My best:</div>
            <div class="statistic__content">{{{bestScore}}}</div>
        </section>
    </header>
    <main class="row">
        <!-- Stage -->
        <section id="stage" class="stage col-md-8"></section><!-- Scores table -->
        <table id="scores-table" class="table col-md-4 table-striped">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Score</th>
                </tr>
            </thead>
            <tbody id="score-table-body"></tbody>
        </table>
    </main>

    <!-- Modal -->
    <div class="modal fade" id="modal-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Save result</h5><button type="button" class="close"
                        data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="modal__score">
                        <p class="modal__text">Youre score:</p><span class="modal__score-value">0</span>
                    </div>
                    <p class="modal__text">Name:</p>
                    <input class="modal__input" value={{{name}}} maxlength="32" disabled>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary modal__cancel-btn"
                        data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary modal__ok-btn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/main.6eef4fffb5c5e401f56e.js"></script>