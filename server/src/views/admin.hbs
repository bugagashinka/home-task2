<div class="container">
    <div class="row">
        <div class="col-8 offset-md-2">
            {{#if pageCount}}
            <div class="input-group search-group">

                <div class="input-group-btn search-panel">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">Filter by</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#2">Login</a>
                        <a class="dropdown-item" href="#3">Name</a>
                        <a class="dropdown-item" href="#4">Ip Address</a>
                        <a class="dropdown-item" href="#5">Date</a>
                    </div>
                </div>

                <input type="text" id="search-query" class="form-control" name="searchQuery"
                    placeholder="Search users...">

            </div>
            {{/if}}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div id="table-container">
                {{> admin-table}}
            </div>
        </div>
    </div>
</div>